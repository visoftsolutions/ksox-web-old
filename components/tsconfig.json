{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["es2022", "DOM", "WebWorker", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["node", "vite/client"],
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib-types"
  },
  "include": ["src", "./*.d.ts", "./*.config.ts"]
}
