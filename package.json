{
  "name": "ksox-web",
  "version": "1.0.0",
  "description": "The KSOX Project",
  "author": "The KSOX Team",
  "license": "CC BY-NC-SA 4.0",
  "workspaces": [
    "components",
    "exchange",
    "landing",
    "pay",
    "static"
  ],
  "scripts": {
    "fmt": "prettier --check .",
    "fmt.apply": "prettier --write .",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "update": "npx npm-check-updates -ws --root",
    "update.apply": "npx npm-check-updates -u -ws --root",
    "clean": "rm -rf node_modules tmp package-lock.json && npm run clean -ws"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.3",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-qwik": "^1.2.12",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.5"
  }
}
